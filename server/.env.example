# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
OTP_JWT_EXPIRES_IN=10m

# Application URL
APP_URL=http://localhost:5000

# Database
DB_FILE=./database.db

# SMTP Configuration (for OTP email)
# For local dev, leave these empty and OTP will be logged to console
# Use Mailtrap.io or Ethereal Email for testing
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@stockmaster.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5
